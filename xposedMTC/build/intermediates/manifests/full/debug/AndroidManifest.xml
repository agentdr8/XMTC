<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dr8.xposedmtc"
    android:versionCode="157"
    android:versionName="1.3.2c" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/xposedmtc"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="2.0*" />
        <meta-data
            android:name="xposeddescription"
            android:value="Mods for Huifei/Klyde/Roadmaster/HotAudio headunits" />

        <activity android:name="com.dr8.xposedmtc.PrefsActivity" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dr8.xposedmtc.Music"
            android:icon="@drawable/ic_music"
            android:label="@string/music_app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dr8.xposedmtc.Radio"
            android:icon="@drawable/ic_radio"
            android:label="@string/radio_app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dr8.xposedmtc.Video"
            android:icon="@drawable/ic_movie"
            android:label="@string/video_app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dr8.xposedmtc.BackView"
            android:icon="@drawable/ic_backview"
            android:label="@string/backview_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.dr8.xposedmtc.receivers.StatusReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.maxmpz.audioplayer.STATUS_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.dr8.xposedmtc.receivers.AutostartReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.dr8.xposedmtc.receivers.ServiceIntentReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.dr8.xposedmtc.START_SERVICE" />
                <action android:name="com.dr8.xposedmtc.STOP_SERVICE" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.dr8.xposedmtc.services.SunriseService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>